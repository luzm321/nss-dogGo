@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Walker Profile";
}

<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" alt="avatar" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <div class="row">
                @foreach (Walk walk in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">
                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@walk.ParsedDateTime</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>                         
                            <span>@Model.Walker.Name walked @walk.Dog.Name</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Dog Owner:</label>
                                <span>@walk.Owner.Name</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <span>@walk.DurationInMinutes min</span>
                                @*<span>@(walk.Duration / 60) min</span>*@
                            </div>
                        </div>
                    </div>
                }

                <h1>Total Walk Time:</h1>
                <span class="ml-4" style="font-size: 35px">@Model.TotalDurationTime</span>
            </div>
        </section>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

